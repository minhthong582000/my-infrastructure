# JINJA template for Python (which ansible based on)

upstream nodeapp {
    server 192.168.33.21:3000;
    server 192.168.33.22:3000;
}

server {
    listen 80;

    server_name {{ server_name }};

    location / {
        proxy_pass http://nodeapp;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $http_host;
    }
}